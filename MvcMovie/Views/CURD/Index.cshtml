@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/my_style.css">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>	
        <script src="~/js/myjavascript.js" type="text/javascript"></script>
               
	</head>

	<body>			
        <div>
            <div class="container">
                <div class="row mx-0 align-items-center justify-content-center w-100">
                    <div class="col-12">
                        <div style="text-align:center;">
                        <p>
                            <form id="filter">
                                <span style="font-size:20px;">查詢&nbsp;&nbsp;</span> 
                                <select name="filterOption">
                                    <option value="0">請選擇</option>
                                    <option value="sid">學號</option>
                                    <option value="name">姓名</option>
                                    <option value="sex">性別</option>
                                </select>
                                <input type="text" name="filterWord">
                                <button name="search">搜尋</button>
                            </form>
                        </p>
                        </div>
                    </div> <!--class="col-12 col-md-9 col-lg-6-->
                </div>		
            </div>
            <br/>
        </div>

        <div>
            <table class="table table-hover table-bordered student_table">
                <thead class="thead-dark" >
                    <tr>
                        <th scope="col">學號</th>
                        <th scope="col">姓名</th>
                        <th scope="col">性別</th>
                        <th scope="col">管理動作</th>
                    </tr>
                </thead> 
                <tbody class="studentList">
                    <!--
                        <tr><td colspan="4" style="text-align:center;">無資料</td></tr>
                     -->
                    
                </tbody>
            </table>
            <div name="addButtonDiv" class="btnActive">
                <a href="javascript:void(0);" class="btn btn-primary" style="float:right">新增學生</a>
            </div>
        </div>
    
        <div class="template">
            <table>
                <tr name="dataRow">
                    <td scope="col" name="sid"></td>
                    <td scope="col" name="name"></td>
                    <td scope="col" name="sex"></td>
                    <td scope="col" width="20%">
                        <a href="javascript:void(0);" class="btn btn-primary edit_student btnActive" >編輯</a>
                        <a href="javascript:void(0);" class="btn btn-danger del_student btnActive" >刪除</a>
                    </td>
                </tr>
                <tr name="inputRow">
                    <td>
                        <input type='text' name="newSidTxb" style='zoom:75%'>
                    </td>
                    <td>
                        <input type='text' name="newNameTxb" style='zoom:75%'>
                    </td>
                    <td>
                        <input type='text' name="newSexTxb" style='zoom:75%'>
                    </td>
                    <td>
                        <a href="javascript:void(0);" class="btn btn-success" group="add" name="addBtn">新增</a>
                        <a href="javascript:void(0);" class="btn btn-secondary" group="add" name="addCancel">取消</a>
                        <a href="javascript:void(0);" class="btn btn-success" group="update" name="updateBtn">更新</a>
                        <a href="javascript:void(0);" class="btn btn-secondary" group="update" name="updateCancel">取消</a>
                    </td>
                </tr>
            </table>
        </div>
	</body>
</html>