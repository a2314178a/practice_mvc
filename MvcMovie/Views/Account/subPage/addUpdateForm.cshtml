@{
	Layout=null;
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
			<meta charset="utf-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1">				    
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/my_style.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>	
	<script src="~/js/baseJS.js" type="text/javascript"></script>
	<script src="~/js/masterPage.js" type="text/javascript"></script>        
	</head>

	<body>					
		<h3 style="text-align:center;">@ViewBag.mainText</h3><hr/>
		<div style="text-align:center;">
			<form id="dataForm">
				<table class="table table-striped">
					<tbody>
						<tr>
							<td width="25%">帳號:</td>
							@if(ViewBag.Action == "add")
							{
								<td><input type="text" group="detail" name="Account" value="@ViewBag.Account"></td>
							}
							else
							{
								<td><input type="text" group="detail" name="Account" value="@ViewBag.Account" readonly></td>
							}
						</tr>
						<tr>
							<td width="25%">密碼:</td>
							<td><input type="password" group="detail" name="Password"></td>
						</tr>
						<tr>
							<td width="25%">確認密碼:</td>
							<td><input type="password" group="detail" data="rePassword"></td>
						</tr>
						<tr>
							<td width="25%">名字:</td>
							<td><input type="text" group="detail" name="UserName" value="@ViewBag.UserName"></td>
						</tr>
						<tr>
							<td width="25%">權限</td>
							<td>
								<select group="detail" name="Authority">
									<option value="" >請選擇</option>
									<!option value="1" @(ViewBag.Authority==1 ? "selected":"")>管理人員</!option>
									<!option value="2" @(ViewBag.Authority==2 ? "selected":"")>教師</!option>
									<!option value="3" @(ViewBag.Authority==3 ? "selected":"")>學生</!option>
								</select>
							</td>
						</tr>
					</tbody>
				</table>
				<hr/>
				@if(ViewBag.Action == "add")
				{
					<input type="button" name="addUser" value="新增">
				}
				else if(ViewBag.Action == "update")
				{
					<input type="button" name="updateUser" value="更新" onclick="updateData(@ViewBag.Id)">
				}
				&nbsp;&nbsp;&nbsp;&nbsp;
				<input type="button" name="cancelEdit" value="取消">
			</form>
		</div>
	</body>
</html>