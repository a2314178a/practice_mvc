@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">				    
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>	
        <script src="~/js/baseJS.js" type="text/javascript"></script>
        <script src="~/js/studentPage.js" type="text/javascript"></script>
        <link rel="stylesheet" href="~/css/my_style.css">
               
	</head>

	<body>			
        <div class="detailDiv">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    @if(ViewBag.showPage == "MySubject")
                    {
                        <div class="col-12">
                            <div id="stuMySubjectPage">

                                <div id="mySubjectTime">
                                    <table class="table table-hover-cells table-bordered stuMySubject">
                                        <thead>
                                            <tr>
                                                <td>時間\日期</td>
                                                <td>星期一</td><td>星期二</td><td>星期三</td>
                                                <td>星期四</td><td>星期五</td><td>星期六</td><td>星期日</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>08:00-09:00</td>
                                                <td id="1_8_9" group="sub_td"></td><td id="2_8_9" group="sub_td"></td><td id="3_8_9" group="sub_td"></td>
                                                <td id="4_8_9" group="sub_td"></td><td id="5_8_9" group="sub_td"></td><td id="6_8_9" group="sub_td"></td><td id="7_8_9" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>09:00-10:00</td>
                                                <td id="1_9_10" group="sub_td"></td><td id="2_9_10" group="sub_td"></td><td id="3_9_10" group="sub_td"></td>
                                                <td id="4_9_10" group="sub_td"></td><td id="5_9_10" group="sub_td"></td><td id="6_9_10" group="sub_td"></td><td id="7_9_10" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>10:00-11:00</td>
                                                <td id="1_10_11" group="sub_td"></td><td id="2_10_11" group="sub_td"></td><td id="3_10_11" group="sub_td"></td>
                                                <td id="4_10_11" group="sub_td"></td><td id="5_10_11" group="sub_td"></td><td id="6_10_11" group="sub_td"></td><td id="7_10_11" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>11:00-12:00</td>
                                                <td id="1_11_12" group="sub_td"></td><td id="2_11_12" group="sub_td"></td><td id="3_11_12" group="sub_td"></td>
                                                <td id="4_11_12" group="sub_td"></td><td id="5_11_12" group="sub_td"></td><td id="6_11_12" group="sub_td"></td><td id="7_11_12" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>12:00-13:00</td>
                                                <td colspan="7">午休時間</td>
                                            </tr>
                                            <tr>
                                                <td>13:00-14:00</td>
                                                <td id="1_13_14" group="sub_td"></td><td id="2_13_14" group="sub_td"></td><td id="3_13_14" group="sub_td"></td>
                                                <td id="4_13_14" group="sub_td"></td><td id="5_13_14" group="sub_td"></td><td id="6_13_14" group="sub_td"></td><td id="7_13_14" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>14:00-15:00</td>
                                                <td id="1_14_15" group="sub_td"></td><td id="2_14_15" group="sub_td"></td><td id="3_14_15" group="sub_td"></td>
                                                <td id="4_14_15" group="sub_td"></td><td id="5_14_15" group="sub_td"></td><td id="6_14_15" group="sub_td"></td><td id="7_14_15" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>15:00-16:00</td>
                                                <td id="1_15_16" group="sub_td"></td><td id="2_15_16" group="sub_td"></td><td id="3_15_16" group="sub_td"></td>
                                                <td id="4_15_16" group="sub_td"></td><td id="5_15_16" group="sub_td"></td><td id="6_15_16" group="sub_td"></td><td id="7_15_16" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>16:00-17:00</td>
                                                <td id="1_16_17" group="sub_td"></td><td id="2_16_17" group="sub_td"></td><td id="3_16_17" group="sub_td"></td>
                                                <td id="4_16_17" group="sub_td"></td><td id="5_16_17" group="sub_td"></td><td id="6_16_17" group="sub_td"></td><td id="7_16_17" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>17:00-18:00</td>
                                                <td id="1_17_18" group="sub_td"></td><td id="2_17_18" group="sub_td"></td><td id="3_17_18" group="sub_td"></td>
                                                <td id="4_17_18" group="sub_td"></td><td id="5_17_18" group="sub_td"></td><td id="6_17_18" group="sub_td"></td><td id="7_17_18" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>18:00-19:00</td>
                                                <td colspan="7">休息時間</td>
                                            </tr>
                                            <tr>
                                                <td>19:00-20:00</td>
                                                <td id="1_19_20" group="sub_td"></td><td id="2_19_20" group="sub_td"></td><td id="3_19_20" group="sub_td"></td>
                                                <td id="4_19_20" group="sub_td"></td><td id="5_19_20" group="sub_td"></td><td id="6_19_20" group="sub_td"></td><td id="7_19_20" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>20:00-21:00</td>
                                                <td id="1_20_21" group="sub_td"></td><td id="2_20_21" group="sub_td"></td><td id="3_20_21" group="sub_td"></td>
                                                <td id="4_20_21" group="sub_td"></td><td id="5_20_21" group="sub_td"></td><td id="6_20_21" group="sub_td"></td><td id="7_20_21" group="sub_td"></td>
                                            </tr>
                                            <tr>
                                                <td>21:00-22:00</td>
                                                <td id="1_21_22" group="sub_td"></td><td id="2_21_22" group="sub_td"></td><td id="3_21_22" group="sub_td"></td>
                                                <td id="4_21_22" group="sub_td"></td><td id="5_21_22" group="sub_td"></td><td id="6_21_22" group="sub_td"></td><td id="7_21_22" group="sub_td"></td>
                                            </tr>
                                        </tbody>                             
                                    </table>
                                </div>

                                <div id="thisSubHomework">
                                    <table class="table table-hover table-bordered homework_table">
                                        <thead class="thead-dark" >
                                        <tr>
                                            <th scope="col">作業名稱</th>
                                            <th scope="col">作業內容</th>
                                            <th scope="col">截止時間</th>
                                            <th scope="col">作業檢視</th>
                                            <th scope="col">管理動作</th>
                                        </tr>
                                        </thead> 
                                        <tbody class="homeworkList">
                                        </tbody>
                                    </table>
                                    <div id="uploadDiv">
                                        <form id="form" name="form" action="/Student/uploadFile" enctype="multipart/form-data" method="post">
                                            <h5></h5>
                                            <input id="uploadFile" type="file" name="uploadFile" accept=".docx,.pptx,.xlsx,.pdf">
                                            <input id="uploadSubmit" type="button" value="上傳">
                                            <input type="button" value="取消" onclick="hideUploadDiv()">
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-8">
                            <div id="stuDetailPage">
                                <table class="table table-hover table-bordered detail_table">
                                    <tbody id="studentDetail">
                                        <tr>
                                            <td>學號:</td>
                                            <td class="textMode" name="StudentID"></td>
                                        </tr>
                                        <tr>
                                            <td >姓名:</td>
                                            <td class="textMode" name="Name"></td>
                                        </tr>
                                        <tr>
                                            <td >性別:</td>
                                            <td class="textMode" name="Sex"></td>
                                        </tr>
                                        <tr>
                                            <td >生日:</td>
                                            <td class="textMode" name="Birth"></td>
                                        </tr>
                                        <tr>
                                            <td >年齡:</td>
                                            <td class="textMode" name="Age"></td>
                                        </tr>
                                        <tr>
                                            <td >選修科目:</td>
                                            <td class="textMode" name="Subject"></td> 
                                        </tr>
                                    </tbody>
                                </table>
                                <div id="editDiv">
                                    <div style="text-align:center;" >
                                        <button type="button" class="textMode" name="addDelBtn">加退選</button>
                                    </div> 
                                    <div id="selSubjectDiv">
                                        <span>課程: </span>
                                        <select id="subjectSel">
                                        </select>
                                        &nbsp;&nbsp;
                                        <button type="button" name="addSubBtn">加選</button>&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button type="button" onclick="cancelAddDel();">退出加退選</button>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    }     
                </div>
            </div>
        </div>
    






        <div class="template">
            <table>
                <tr name="dataRow">
                    <td scope="col" name="sid"></td>
                    <td scope="col" name="name"></td>
                    <td scope="col" name="sex"></td>
                    <td scope="col" width="20%">
                        <a href="javascript:void(0);" class="btn btn-primary edit_student btnActive" >編輯</a>
                        <a href="javascript:void(0);" class="btn btn-danger del_student btnActive" >刪除</a>
                    </td>
                </tr>
                <tr name="inputRow">
                    <td>
                        <input type='text' name="newSidTxb" style='zoom:75%'>
                    </td>
                    <td>
                        <input type='text' name="newNameTxb" style='zoom:75%'>
                    </td>
                    <td>
                        <input type='text' name="newSexTxb" style='zoom:75%'>
                    </td>
                    <td>
                        <a href="javascript:void(0);" class="btn btn-success" group="add" name="addBtn">新增</a>
                        <a href="javascript:void(0);" class="btn btn-secondary" group="add" name="addCancel">取消</a>
                        <a href="javascript:void(0);" class="btn btn-success" group="update" name="updateBtn">更新</a>
                        <a href="javascript:void(0);" class="btn btn-secondary" group="update" name="updateCancel">取消</a>
                    </td>
                </tr>

                <tr name="subTimeDetail" class="subTimeDetail">
                    <td name="subName"></td>
                    <td name="subTime"></td>
                    <td class="status" name="subStatus" ></td>
                    <td name="delBtn" ></td>
                </tr>

                <tr name="homeworkRow">
                    <td scope="col" name="homeworkName"></td>
                    <td scope="col" name="homeworkDetail"></td>        
                    <td scope="col" name="deadTime"></td>
                    <td scope="col" name="fileView"></td>
                    <td>
                        <a href="javascript:void(0);" class="btn btn-primary upload_homework btnActive" >上傳檔案</a>
                    </td>
                </tr>

            </table>
            <table class="subTable"></table>
        </div>
	</body>
</html>